@model LiseWoreEmp.Models.ViewModel.EmployeeViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Employee Details";
}

<style>
    .details-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 15px 15px 0 0;
        padding: 2rem;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: white;
        border: 4px solid rgba(255, 255, 255, 0.3);
    }

    .employee-name {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .employee-position {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 0;
    }

    .details-card {
        background: white;
        border-radius: 0 0 15px 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        border: none;
    }

    .section-title {
        color: #495057;
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #e9ecef;
    }

    .info-item {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 1.25rem;
        margin-bottom: 1rem;
        border-left: 4px solid #667eea;
    }

    .info-label {
        color: #6c757d;
        font-size: 0.9rem;
        font-weight: 500;
        margin-bottom: 0.25rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        color: #495057;
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0;
    }

    .info-icon {
        color: #667eea;
        margin-right: 0.75rem;
        width: 20px;
        text-align: center;
    }

    .action-buttons {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0 0 15px 15px;
        border-top: 1px solid #e9ecef;
    }

    .btn-back {
        background: #6c757d;
        border: none;
        border-radius: 8px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        color: white;
    }

        .btn-back:hover {
            background: #5a6268;
            color: white;
        }

    .btn-edit {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        color: white;
    }

        .btn-edit:hover {
            background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
            color: white;
        }

    .department-badge {
        background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
        display: inline-block;
    }

    .breadcrumb-custom {
        background: transparent;
        padding: 1rem 0;
        margin-bottom: 1rem;
    }

        .breadcrumb-custom .breadcrumb-item a {
            color: #667eea;
            text-decoration: none;
        }

        .breadcrumb-custom .breadcrumb-item.active {
            color: #6c757d;
        }
</style>

<div class="container-fluid">
    <div class="details-container">
       

        <!-- Employee Profile Card -->
        <div class="card details-card">
            <!-- Profile Header -->
            <div class="profile-header">
                <div class="row align-items-center">
                    <div class="col-md-3 text-center text-md-start">
                        <div class="profile-avatar mx-auto mx-md-0">
                            @{
                                var initials = "";
                                if (!string.IsNullOrEmpty(Model.FirstName))
                                    initials += Model.FirstName.Substring(0, 1);
                                if (!string.IsNullOrEmpty(Model.LastName))
                                    initials += Model.LastName.Substring(0, 1);
                            }
                            @initials.ToUpper()
                        </div>
                    </div>
                    <div class="col-md-9 text-center text-md-start mt-3 mt-md-0">
                        <h1 class="employee-name">
                            @Model.FirstName
                            @if (!string.IsNullOrEmpty(Model.MiddleName))
                            {
                                @Model.MiddleName
                            }
                            @Model.LastName
                        </h1>
                        <p class="employee-position">@Model.Position</p>
                        <div class="department-badge">
                            <i class="fas fa-building me-2"></i>@Model.Department
                        </div>
                    </div>
                </div>
            </div>

            <!-- Employee Details -->
            <div class="card-body p-4">
                <!-- Personal Information Section -->
                <div class="mb-4">
                    <h4 class="section-title">
                        <i class="fas fa-user me-2"></i>Personal Information
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-id-badge info-icon"></i>
                                    <div class="flex-grow-1">
                                        <div class="info-label">Employee ID</div>
                                        <p class="info-value">@Model.EmployeeId</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-tag info-icon"></i>
                                    <div class="flex-grow-1">
                                        <div class="info-label">Full Name</div>
                                        <p class="info-value">
                                            @Model.FirstName
                                            @if (!string.IsNullOrEmpty(Model.MiddleName))
                                            {
                                                @Model.MiddleName
                                            }
                                            @Model.LastName
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Information Section -->
                <div class="mb-4">
                    <h4 class="section-title">
                        <i class="fas fa-address-book me-2"></i>Contact Information
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-envelope info-icon"></i>
                                    <div class="flex-grow-1">
                                        <div class="info-label">Email Address</div>
                                        <p class="info-value">
                                            <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-phone info-icon"></i>
                                    <div class="flex-grow-1">
                                        <div class="info-label">Phone Number</div>
                                        <p class="info-value">
                                            @if (!string.IsNullOrEmpty(Model.Phone))
                                            {
                                                <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not provided</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Employment Information Section -->
                <div class="mb-4">
                    <h4 class="section-title">
                        <i class="fas fa-briefcase me-2"></i>Employment Information
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-building info-icon"></i>
                                    <div class="flex-grow-1">
                                        <div class="info-label">Department</div>
                                        <p class="info-value">@Model.Department</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-tie info-icon"></i>
                                    <div class="flex-grow-1">
                                        <div class="info-label">Position</div>
                                        <p class="info-value">@Model.Position</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-alt info-icon"></i>
                                    <div class="flex-grow-1">
                                        <div class="info-label">Hire Date</div>
                                        <p class="info-value">
                                            @if (Model.HireDate.HasValue)
                                            {
                                                @Model.HireDate.Value.ToString("MMMM dd, yyyy")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not specified</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-plus info-icon"></i>
                                    <div class="flex-grow-1">
                                        <div class="info-label">Added By</div>
                                        <p class="info-value">
                                                @Model.AddedBy
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <a asp-action="Index" asp-controller="Employee" class="btn btn-back">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                    <div>
                        <a asp-action="EditEmployee" asp-controller="Employee" asp-route-empEncId="@Model.EmpEncId" class="btn btn-edit">
                            <i class="fas fa-edit me-2"></i>Edit Employee
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>